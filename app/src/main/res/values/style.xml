<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MoonTHeme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MarsTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CosmosTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/purple_700</item>
    </style>




    <style name="IndigoTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
<!--        замена цвета-->

        <item name="fontFamily">@font/ptsans_bolditalic</item>
        <item name="android:fontFamily">@font/ptsans_bolditalic</item>
<!--        замена шрифта-->

        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
<!--        Прописные буквы у кнопок-->

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>

    </style>


    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

<style name="bottom_sheet_description_header" parent="TextAppearance.AppCompat.Title">
    <item name="paddingStart">10dp</item>
    <item name="paddingEnd">10dp</item>
    <item name="android:textColor">@color/black</item>
<!--    <item name="textInputStyle">"bold"</item>-->
</style>
</resources>