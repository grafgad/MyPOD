<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mypod">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Splash">
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                android:label="com.example.mypod">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data
                    android:host="intent3"
                    android:scheme="example" />

            </intent-filter>
        </activity>

        <activity android:name=".view.MainActivity" />

        <activity android:name=".api.ApiActivity" />

        <activity android:name=".view.AnimationActivity" />

        <activity android:name=".api.ApiBottomActivity" />

        <activity android:name=".recycler.RecyclerActivity" />

        <activity android:name=".recycler.myrecycler.NoticeRecyclerActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>